<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/actions_ll_num"
        android:animateLayoutChanges="true"
        android:visibility="visible"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:id="@+id/actions_ll_num2"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/btNumCCaall"
                android:src="@drawable/ic_calculator"
                android:scaleType="fitCenter"
                android:background="@drawable/button_r1"
                android:gravity="center"
                android:padding="15dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/btNormalKeyFromNum"
                android:src="@drawable/ic_keyboard"
                android:scaleType="fitCenter"
                android:background="@drawable/button_r1"
                android:gravity="center"
                android:padding="10dp"
                android:layout_height="match_parent"/>





        </LinearLayout>

    </HorizontalScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/keyboard_bg2"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/btKeyNum1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/keyboard_key"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum2"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="2"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum3"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_r1"
            android:textSize="25sp"
            android:text="3"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum4"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:textSize="40sp"
            android:text="-"
            android:layout_height="match_parent"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/keyboard_bg2"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/btKeyNum5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/keyboard_key"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum6"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="5"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum7"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@drawable/button_r1"
            android:text="6"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum8"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@drawable/button_r1"
            android:text="⎵"
            android:layout_height="match_parent"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/keyboard_bg2"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/btKeyNum9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_r1"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/keyboard_key"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum10"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="8"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum11"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="9"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum12"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_r1"
            android:textSize="25sp"
            android:text="⌫"
            android:layout_height="match_parent"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/keyboard_bg2"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/btKeyNum13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:text=","
            android:textColor="@color/keyboard_key"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum14"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:background="@drawable/button_r1"
            android:text="0"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum15"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:background="@drawable/button_r1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="."
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/btKeyNum16"
            android:textColor="@color/keyboard_key"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/btKeyEnterNum"
                android:layout_weight="0"
                android:background="@drawable/button_round"
                android:src="@drawable/ic_arrow_right_alt"
                android:scaleType="center"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:layout_height="40dp"/>

        </LinearLayout>




    </LinearLayout>




</LinearLayout>